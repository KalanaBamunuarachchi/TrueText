<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:TrueText"
             xmlns:vm="using:TrueText.ViewModels"
             xmlns:view="clr-namespace:TrueText.Views"
             x:DataType="vm:ScanPageViewModel"
             x:Class="TrueText.Views.ScanPageView">

	<Grid ColumnDefinitions="*, *" RowDefinitions="Auto, *">
		<!-- Ribbon -->
		<StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="10">
			<local:RibbonControl/>
		</StackPanel>

		<!-- Preview Area -->
		<Border Grid.Row="1" Grid.Column="0" BorderBrush="Gray" BorderThickness="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
			<TextBlock Text="Scanned Image Preview" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="Gray"/>
		</Border>

		<!-- Controls -->
		<StackPanel Grid.Row="1" Grid.Column="1" Margin="10" VerticalAlignment="Top" Spacing="10">
			<TextBlock Text="Select Printer" FontWeight="Bold" FontSize="14"/>
			<ComboBox Width="200" Height="40"/>

			<Button Content="Scan" Width="200" Height="40" Background="#0078D7" Foreground="White" HorizontalAlignment="Center"/>
		</StackPanel>
	</Grid>
</UserControl>
