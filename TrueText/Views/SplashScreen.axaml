	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="440"/>
			<ColumnDefinition Width="440"/>
		</Grid.ColumnDefinitions>

		<Border Grid.Column="0"	Background="White" CornerRadius="24 0  0 24" Padding="20 20 20 20" >
			
			<Grid  >
				<Grid.RowDefinitions>
					<RowDefinition Height="80"/>
					<RowDefinition Height="*"/>
