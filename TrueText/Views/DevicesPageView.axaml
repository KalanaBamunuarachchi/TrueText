<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             xmlns:local="using:TrueText"
             xmlns:vm="using:TrueText.ViewModels"
             xmlns:view="clr-namespace:TrueText.Views"
             x:Class="TrueText.Views.DevicesPageView">

	<Grid ColumnDefinitions="*, *" RowDefinitions="Auto, *" >
		<!-- Ribbon -->
		<StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="10">
			<local:RibbonControl/>
		</StackPanel>

		<!-- Scan Area -->

		<!-- Preview Area -->
		<Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<!-- Left: Expands to take available space -->
				<ColumnDefinition Width="Auto" />
				<!-- Right: Shrinks to fit content -->
			</Grid.ColumnDefinitions>

			<!-- Left Side: TextBlock -->
			<TextBlock Text="Connected Devices"
					   FontSize="16"
					   FontWeight="Bold"
					   VerticalAlignment="Top"
					   HorizontalAlignment="Left"
					   Foreground="{DynamicResource ResourceKey=PrimaryText}" 
					   />

			<!-- Right Side: Button -->
			<Button Content="Manage"
					Grid.Column="1"
					Classes="Tertiary"
					FontSize="14"
					
					VerticalAlignment="Top"
					HorizontalAlignment="Right"
					Background="{DynamicResource ResourceKey=PrimaryButton}"
					/>
		</Grid>


		<!-- Controls -->
		<StackPanel Grid.Row="1" Grid.Column="1">

		</StackPanel>
		
	 </Grid>
    
</UserControl>
